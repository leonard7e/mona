<div
  class="BlogItem"
  ng-class='{Active:taxIsActive({{page.taxonomy | json_encode()}}), TaxEmpty: taxIsEmpty()}'
  >
  <header>
    <h3> <a href="{{page.url}}">
      {{page.title}}
    </a>
  </h3>
  </header>
  <p>
    {{ page.summary }}
  </p>
  <footer>
    <div class="Taxonomy">
      {% include 'filter/categories.html.twig' %}
      {% include 'filter/tags.html.twig' %}
    </div>
  </footer>
</div>
