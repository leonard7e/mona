{% extends 'partials/base.html.twig' %}

{% block stylesheets %}
{% do assets.addCss('theme://css-compiled/mona-default.css') %}
{% endblock %}

{% block content %}
<div id="TableOfContents">
  {% for section in pages.children.visible %}
  <div class="tocEntry">
    <h3 class="tocSection"> {{section.title}} </h3>
    <ul>
      {% for p in section.children.visible %}
      <li> <a class="navItem" href="{{p.url}}">{{p.title}}</a></li>
      {% endfor %}
    </ul>
  </div>
  {% endfor %}
</div>
{% endblock %}


{% block header %}
<h1>{{ page.title() }}</h1>
{% endblock %}

{% block breadcrumbs %}{% endblock %}
{% block sidenav %}{% endblock %}
