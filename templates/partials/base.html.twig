<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: theme_config.default_lang }}">
  <head>
    {% block stylesheets %}
    {% do assets.addCss('theme://css-compiled/mona-default.css') %}
    {% endblock %}
    {{ assets.css() }}
    {% block javascript %}
    {% do assets.addJs('http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular.min.js') %}
    {% do assets.addJs('http://ajax.googleapis.com/ajax/libs/angularjs/1.4.8/angular-aria.js') %}
    {% do assets.addJs('theme://js/mona.js') %}
    {% do assets.addJs('theme://js/controllers/MainController.js', {'group':'MonaAngular'}) %}
    {% endblock %}
    {{ assets.js() }}
    <meta charset="utf-8">
    <title>{{ config.site.title }} --- {{page.title() }}</title>
  </head>
  <body>
    <main ng-app="Mona">
      {% block banner %}
      {% include 'partials/header.html.twig' %}
      {% endblock %}
      <section id="mainSection">
        {% block sidenav %}
          {% include 'partials/navigation/side_nav.html.twig' %}
        {% endblock %}
        <div class="contents">
          <header>
            {% block header %}
              {% if config.plugins.breadcrumbs.enabled %}
              {% include 'partials/breadcrumbs.html.twig' %}
              {% endif %}
              <h1>{{ page.title() }}</h1>        
            {% endblock %}
          </header>
          {% block content %}{% endblock %}
        </div>
      </section>
      {% include 'partials/footer.html.twig' %}
    </main>
  </body>
  {{ assets.js('Mona') }}    
  {{ assets.js('MonaAngular') }}    
</html>
